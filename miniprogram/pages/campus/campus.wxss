/* pages/campus/campus.wxss */
page {
  background: hsl(0, 0%, 96%);
  width: 100%;
  height: 100%;
}

.item_head {
  height: 430rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-top: 36rpx;
  display: flex;
  flex-direction: column;
}

.txt {
  flex: 1;
  color: #888888;
  font-size: 32rpx;
  padding-left: 5rpx;
  padding-bottom: 10rpx;
}

.img {
  width: 100%;
  height: 100%;
  flex: 10;
}

.item_content {
  width: 650rpx;
  height: auto;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 48rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.item_c {
  display: flex;
  height: 236rpx;
  width: 303rpx;
  border: 10rpx solid #f4f4f4;
  flex-direction: column;
  padding-bottom: 12rpx;
}